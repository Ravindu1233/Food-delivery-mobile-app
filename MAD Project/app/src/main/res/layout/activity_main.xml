<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/home_bg"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/admin_bg"/>

    <Button
        android:id="@+id/admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"

        android:backgroundTint="#009688"
        android:text="Admin" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:text="Welcome to the Petti Kade"
        android:layout_below="@id/admin_button"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/get_started_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:text="Get started now"
        android:textSize="25sp"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#009688"
        android:text="Sign Up"
        android:textSize="24sp"
        app:cornerRadius="15dp" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/get_started_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:backgroundTint="#2196F3"
        android:text="Sign in"
        android:textSize="24sp"
        app:cornerRadius="15dp" />




</RelativeLayout>